<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.williammerle.recherchehtml.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faire une recherche par URL - Cette URL doit Ãªtre valide et existante"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fontFamily="monospace"
        android:textColor="#34495e"
        android:textAlignment="center" />

    <TextView
        android:text="Affichage du HTML"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/resultatHtml"
        android:layout_below="@+id/buttonWeb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textColor="#34495e"
        android:scrollbars="vertical"
        android:fontFamily="monospace"
        android:background="#ecf0f1"
        android:textStyle="normal|italic" />

    <Button
        android:text="HTML"
        android:layout_height="30dp"
        android:layout_marginTop="56dp"
        android:id="@+id/buttonRecherche"
        android:background="#27ae60"
        android:layout_width="100dp"
        android:layout_below="@+id/searchUrl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#34495e"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="http://www."
        android:ems="10"
        android:id="@+id/searchUrl"
        android:background="#bdc3c7"
        android:textColor="#34495e"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="61dp"
        android:textStyle="normal|bold"
        android:fontFamily="monospace" />

    <Button
        android:text="WEB"
        android:layout_height="30dp"
        android:id="@+id/buttonWeb"
        android:background="#2980b9"
        android:layout_width="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonRecherche"
        android:textColor="#34495e"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

</RelativeLayout>
